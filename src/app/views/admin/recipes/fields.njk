<div class="item">
    <div>Imagens da receita (selecione até 5 fotos)</div>
    <div id = "photos-container">
        <div id="photos-upload">
            <input 
                id="photos-input"
                type="file" 
                name="photos" 
                multiple
                accept="image/*"
                onchange="PhotosUpload.handleFileInput(event)"
                >
            <p>
                <i class="material-icons">add</i>
            </p>
        </div>
        <div id="photos-preview">
            {% if recipe.files %}
                {% for image in recipe.files %}
                    <div class="photo" id="{{image.file_id}}">
                        <img src="{{image.file_path}}" alt="{{image.id}}">
                        <i class="material-icons"
                            onclick="PhotosUpload.removeOldPhoto(event)">close</i>
                    </div>
                {% endfor %}
                <input type="hidden" name="removed_files">
            {% endif %}
        </div>         
    </div>
</div>

<div class="item">
    <div>Chef</div>
    <select name="chef" placeholder="Selecione um chef">
      {% for chef in chefs %}
        <option value="{{chef.id}}" {% if recipe.chef_id == chef.id %} selected{% endif %} >
          {{chef.name}}
        </option>
      {% endfor %}
    </select>
</div>

<div class="item">
    <div>Titulo da receita</div>
    <div>
        <input 
            type="text" 
            name="title"
            value="{{ recipe.title }}"
            >
    </div>
</div>

<div id="ingredients">
    <div>Ingredientes</div>
    {% for ingredient in recipe.ingredients %}
        <div class="ingredient">
            <input 
                type="text" 
                name="ingredients[]"
                value="{{ ingredient }}"
                >
        </div>
    {% else %}
        <div class="ingredient">
            <input 
                type="text" 
                name="ingredients[]"
                >
        </div>
    {% endfor %}
</div>
<button type="button" class="add-ingredient">Adicionar novo ingrediente</button>

<div id="modo-preparo">
    <div>Modo de preparo</div>
    {% for preparation in recipe.preparation %}
        <div class="modo-prep">
            <input 
                type="text" 
                name="preparation[]"
                value="{{ preparation }}"
                >
        </div>
    {% else %}
        <div class="modo-prep">
            <input 
                type="text" 
                name="preparation[]"
                placeholder="Modo de preparo"
                >
        </div>
    {% endfor %}
</div>
<button type="button" class="add-preparation">Adicionar novo passo</button>

<div class="item">
    <div>Informações adicionais</div>
        <div>
            <textarea name="information" >{{ recipe.information }}</textarea>
        </div>
</div>    