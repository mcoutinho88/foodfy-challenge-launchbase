{% extends "admin/layout.njk" %}


{% block content %}

  <section class="user-profile admin">
    <form method="POST" action="/admin/profile?_method=PUT">

      <div class="card-header user-header-profile">
        <h3>Bem vindo
          {{user.name}}</h3>
          <button class="button-save" type="submit">Salvar</button>
      </div>
      <div class="fields">
        <div class="item">
          <div>Nome</div>
          <div class="input">
            <input type="text" name="name" placeholder="Digite seu nome completo" value="{{ user.name }}"/>
          </div>
        </div>
        <div class="item">
          <div>Email</div>
          <div class="input">
            <input type="email" name="email" placeholder="Digite seu email" value="{{ user.email }}" onblur="Validate.apply(this, 'isEmail')"/>
          </div>
        </div>
        <div class="item">
          <div>Senha</div>
          <div class="input">
            <input type="password" name="password" placeholder="Digite sua senha"/>
          </div>
        </div>
        <input type="hidden" name="id" value="{{user.id}}">

      </div>

    </form>
  </section>

{% endblock %}