{% macro chefs(name, classes, chefs) %}

<section class="chefs {{classes}}">

  {% if name %}
    <h2>{{name}}</h2>
  {% endif %}

  <div class="items">
    {% for chef in chefs %}
        <div class="chef" id="{{chef.id}}">
            <div class="chef-logo">
                <img src={{chef.avatar_url}}>
            </div>
            <div class="chef-content">
                <p>{{chef.name}}</p>
                <div class="chef-info">
                    <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                </div>
            </div>
            
        </div>
    {%endfor%}
  </div>
</section>

{% endmacro %}